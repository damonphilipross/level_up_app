<%= simple_form_for(@challenge) do |f| %>
    <%= f.error_notification %>

    <%= f.input :title, label: 'Challenge Name' %>
    <%= f.input :location, label: 'Location' %>


    <%= f.input :detail, label: 'Challenge details', placeholder: 'descripe your amazing challenge...' %>



    <%= f.input :duration, label: 'Challenge duration', placeholder: 'days' %>

    <%= f.input :cost, label: 'Buy In', placeholder: '$' %>

    <%= f.input :metric_operator, label: "Challenge ", collection: ['at least', 'less then', 'up to', 'greater then'] %>

    <%= f.input :metric_value, label: '', placeholder: '0-100', range: 0..100 %>

    <%= f.input :metric_verb, label: 'select your challenge item;', collection: ['push ups', 'hours of coding', 'meditations', 'table tennis matches'] %>

    <%= f.input :metric_frequency, label: 'per', collection: ['day', 'week', 'hour', 'month'] %>

    <%= f.input :avatar, as: :file, label: 'Upload your inspirational challenge image' %>


    <%= f.button :submit, class: "btn-warning" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
