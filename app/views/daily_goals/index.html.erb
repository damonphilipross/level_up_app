  <div class="text-center second-color-grey">
   <h2>Daily Goal Calendar for <%= @challenge.title %></h2>
   <h3> Created by <%= current_user.handle %></h3>
      <% counter = 0 %>
      <div class="calendar-card">
        <% @daily_goals.each do |daily_goal| %>
        <div class="calendar-black-border">
            <h3> Day <%= daily_goal.day %> </h3>
            <% current_day = @challenge.start_date + counter %>
            <%= current_day %>
            <%  counter += 1 %>
            <% task_counter = 1 %>
            <% daily_goal.daily_goal_tasks.each do |task| %>

              <h4><%= task_counter %>. <%= task.description %></h4>
              <p><%=  task.task_points %> Points</p>
              <% task_counter +=1  %>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>

