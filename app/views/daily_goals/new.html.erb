<div class="form_container">
  <div class="col-xs-12 col-sm-6" >
        <br/>
    <div id='challenge_form'>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="90"
           aria-valuemin="0" aria-valuemax="100" style="width:90%"> 90% complete
           <br/>
        </div>
      </div>
      <h1>Add daily goals</h1>

      <%=  simple_form_for :daily_goals, url: challenge_daily_goals_path(@challenge) do |f| %>
        <%= f.simple_fields_for :daily_goal_task_1 do |p| %>
          <%= p.input :description %>
          <%= p.input :task_points %>
        <% end %>
        <%= f.simple_fields_for :daily_goal_task_2 do |p| %>
          <%= p.input :description %>
          <%= p.input :task_points %>
        <% end %>
          <%= f.button :submit, 'Next', class: "btn-success" %>
      <% end %>
    </div>
  </div>
</div>
