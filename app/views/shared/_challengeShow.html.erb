<% if index.include?(current_user.id) do %>

  <div class="card">
    <div id="avatar-card">
      <%= cl_image_tag("mi0f9vlnq5ufbw3dxivp.jpg", class: "avatar") %>
    </div>
    <div id="header-body">
      <h4><lighter><%= @challenge.title %></lighter></h4>
        <button class="collapsible">details...</button>
          <div class="content">
            <p><lighter><%= @challenge.duration_days %> days</lighter></p>
            <p><lighter><%= @challenge.start_date.to_s(:long) %></lighter></p>
            <p><lighter>$<%= @challenge.cost %> commitment</lighter></p>
            <p><strong>Challenge Details</strong></p>
            <p><%= @challenge.description %></p>
          </div>
        </div>
  </div>

</div>

<% else %>

  <div class="card">
    <div id="avatar-card">
      <%= cl_image_tag("mi0f9vlnq5ufbw3dxivp.jpg", class: "avatar") %>
    </div>
    <div id="header-body">
      <h4><lighter><%= @challenge.title %></lighter></h4>
            <p><lighter><%= @challenge.duration_days %> days</lighter></p>
            <p><lighter><%= @challenge.start_date.to_s(:long) %></lighter></p>
            <p><lighter>$<%= @challenge.cost %> commitment</lighter></p>
            <p><strong>Challenge Details</strong></p>

        <button class="collapsible">details...</button>
          <div class="content">

            <p><%= @challenge.description %></p>
          </div>
        </div>
      <a class='join_button' <%= link_to 'JOIN', new_user_session_path %> </a>
  </div>
<% end %>
